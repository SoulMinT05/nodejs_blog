<form
    class="mt-4"
    name="container-form"
    method="post"
    action="/courses/handle-form-actions"
>
    <div style="display: flex; justify-content: space-between">
        <h3>Khoá học đã xoá</h3>
        <a
            style="color: blue; font-size: 16px; margin: 10px"
            href="/me/stored/courses"
            >Khoá học của tôi</a
        >
    </div>
    <div class="mt-4 d-flex align-items-center">
        <div class="form-check">
            <input
                class="form-check-input"
                type="checkbox"
                value=""
                id="checkbox-all"
            />
            <label class="form-check-label" for="checkbox-all">
                Chọn tất cả
            </label>
        </div>
        <select
            style="width: 180px; margin: 0 16px"
            class="form-control form-control-sm"
            name="action"
            required
        >
            <option value="">-- Chọn hành động --</option>
            <option value="restore">Khôi phục</option>
            <option value="delete-permanent">Xoá vĩnh viễn</option>
        </select>
        <button class="btn btn-primary btn-sm check-submit-btn disabled">
            Thực hiện
        </button>
    </div>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">Chọn</th>
                <th scope="col">STT</th>
                <th scope="col">Hình ảnh</th>
                <th scope="col">Tên khoá học</th>
                <th scope="col">Mức độ</th>
                <th scope="col">Thời gian xoá</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>
                    <div class="form-check">
                        <input
                            class="form-check-input"
                            type="checkbox"
                            name="courseIds[]"
                            value="{{this._id}}"
                        />
                    </div>
                </td>
                <th scope="row">{{sum @index 1}}</th>
                <td class="w-25">
                    <img
                        src="{{this.image}}"
                        class="img-fluid img-thumbnail"
                        alt="Sheep"
                    />
                </td>
                <td>{{this.name}}</td>
                <td>{{this.level}}</td>
                <td>{{this.deletedAt}}</td>
                <td class="d-flex">
                    <a
                        style="padding-top: 0"
                        href=""
                        class="btn btn-link btn-restore"
                        data-id="{{this._id}}"
                    >
                        {{!--
                        <button class="btn btn-primary">
                            --}} Khôi phục {{!--
                        </button>
                        --}}
                    </a>
                    <a
                        style="
                            padding-top: 4px;
                            color: #dc3545;
                            min-width: 120px;
                        "
                        {{!--
                        class="btn btn-link btn-danger"
                        --}}
                        data-toggle="modal"
                        data-target="#deleteCourseModal"
                        data-id="{{this._id}}"
                        href="#"
                    >
                        {{!--
                        <button
                            class="btn btn-link btn-danger"
                            data-toggle="modal"
                            data-target="#deleteCourseModal"
                            data-id="{{this._id}}"
                        >
                            --}} Xoá vĩnh viễn {{!--
                        </button>
                        --}}
                    </a>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="5" class="text-center">
                    Thùng rác trống.
                    <a href="/me/stored/courses">Quay lại danh sách khoá học</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</form>

{{! Confirm delete }}
<div class="modal" tabindex="-1" role="dialog" id="deleteCourseModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xoá</h5>
                <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                >
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Hành động này không thể khôi phục nữa. Bạn chắc chắn muốn
                    xoá chứ?
                </p>
            </div>
            <div class="modal-footer">
                <button
                    type="button"
                    class="btn btn-primary"
                    data-dismiss="modal"
                >
                    Huỷ
                </button>
                <button
                    id="btn-delete-course"
                    type="button"
                    class="btn btn-danger"
                >
                    Xoá khoá học vĩnh viễn
                </button>
            </div>
        </div>
    </div>
</div>

{{!-- Form hidden --}}
<form name="delete-course-form" method="post"></form>
<form name="restore-course-form" method="post"></form>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        var courseId;
        var containerForm = document.forms['container-form'];
        var deleteForm = document.forms['delete-course-form'];
        var restoreForm = document.forms['restore-course-form'];
        var btnDeletePermanentCourse =
            document.querySelector('#btn-delete-course');
        var btnRestoreCourse = $('.btn-restore');
        var checkboxAll = $('#checkbox-all');
        var courseItemCheckbox = $('input[name="courseIds[]"]');
        var checkSubmitBtn = $('.check-submit-btn');

        $('#deleteCourseModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            courseId = button.data('id');
        });

        btnDeletePermanentCourse.onclick = () => {
            deleteForm.action =
                '/courses/' + courseId + '/deletePermanent?_method=DELETE';
            deleteForm.submit();
        };

        // btnRestoreCourse is JQUERY, not querySelector
        $(document).on('click', '.btn-restore', function (e) {
            e.preventDefault();
            courseId = $(this).data('id');
            restoreForm.action =
                '/courses/' + courseId + '/restore?_method=PATCH';
            restoreForm.submit();
        });

        // Checkbox all changed
        checkboxAll.change(function () {
            var isCheckedAll = $(this).prop('checked');
            courseItemCheckbox.prop('checked', isCheckedAll);
            renderCheckAllSubmitBtn();
        });

        // Course item changed
        courseItemCheckbox.change(function () {
            var isCheckedAll =
                courseItemCheckbox.length ===
                $('input[name="courseIds[]"]:checked').length;
            checkboxAll.prop('checked', isCheckedAll);
            renderCheckAllSubmitBtn();
        });
        checkSubmitBtn.on('click', function (e) {
            if ($(this).hasClass('disabled')) {
                e.preventDefault();
            }
        });

        function renderCheckAllSubmitBtn() {
            var checkedCount = $('input[name="courseIds[]"]:checked').length;
            if (checkedCount > 0) {
                checkSubmitBtn.removeClass('disabled');
            } else {
                checkSubmitBtn.addClass('disabled');
            }
            console.log(checkedCount);
        }
    });
</script>
