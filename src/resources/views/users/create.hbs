<h3 class="mt-4">Thêm người dùng</h3>

<form method="post" action="/users/createStore" class="mt-4">
    <div class="form-group">
        <label for="name">Tên đăng nhập</label>
        <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            required
        />
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input
            type="text"
            class="form-control"
            id="email"
            name="email"
            required
        />
    </div>
    <div class="form-group">
        <label for="password">Mật khẩu</label>
        <input type="text" class="form-control" id="password" name="password" />
        <i style="font-size: 14px; opacity: 0.7"
            >"Mật khẩu nếu không nhập thì mặc định là 123456"</i
        >
    </div>

    <button type="submit" class="btn btn-primary">Tạo người dùng</button>
</form>
